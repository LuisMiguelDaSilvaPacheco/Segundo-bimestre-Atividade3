programa
{
	
	funcao inicio()
	{

		real km, preco_total, dias
		
		escreva("Considere que você alugou um carro, \nonde o preço é R$60.00 por dia e R$0.15 por km, \npor quantos dias você alugou ele?\n")
		leia(dias)
		escreva("e andou quantos km?\n")
		leia(km)

		preco_total = (km * 0.15) + (dias * 60)

		escreva("o preço total foi de R$", preco_total)
		
	}
}
