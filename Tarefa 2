programa
{
	inclua biblioteca Matematica
 --> m
	
	funcao inicio()
	{

		real a, b, c, x1, x2, delta
		
		escreva("Diga um valor A ")
		leia(a)
		escreva("Diga um valor B ")
		leia(b)
		escreva("Diga um valor C ")
		leia(c)

		delta = (b*b) - (4*a*c)
		x1 = (-b + m.raiz(delta, 2)) / 2*a
		x2 = (-b - m.raiz(delta, 2)) / 2*a

		escreva("A = ", a, "\nB = ", b, "\nC = ", c, "\nDelta = ", delta, "\nx1(+) = ", x1, "\nx2(-) = ", x2 )
	}
}
