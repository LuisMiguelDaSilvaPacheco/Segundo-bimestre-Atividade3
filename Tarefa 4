programa
{
	
	funcao inicio()
	{

		real temperatura

		escreva("Diga uma temperatura em °C: ")
		leia(temperatura)
		
		se(temperatura > 0){
			escreva("a temperatura é positiva")
		}senao se(temperatura < 0){
			escreva("a temperatura é negativa")
		}senao se(temperatura == 0){
			escreva("a temperatura é neutra")
		}
		
		
	}
}
